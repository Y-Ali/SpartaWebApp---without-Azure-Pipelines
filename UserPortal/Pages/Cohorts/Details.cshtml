@page
@model UserPortal.Pages.Cohorts.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Cohort</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Cohort.CohortName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cohort.CohortName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Cohort.Specialisation)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cohort.Specialisation.SpecialisationName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Cohort.CohortID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>



<table class="table">
    <thead>
        <tr>
            <th>First Name </th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Cohort</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserL)
        {
            <tr>
                <td> @Html.DisplayFor(modelItem => item.FirstName)  </td>
                <td> @Html.DisplayFor(modelItem => item.LastName)    </td>
                <td> @Html.DisplayFor(modelItem => item.Email)        </td>
                <td> @Html.DisplayFor(modelItem => item.Cohort.CohortName)   </td>
                <td> @Html.DisplayFor(modelItem => item.Role.RoleName)       </td>
            </tr>
        }
    </tbody>
</table>
